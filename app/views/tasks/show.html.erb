<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed == true %>
<i class="far fa-check-square"></i><p>This task has been completed</p>
<% else %>
<i class="far fa-square"></i><p>This task has not been completed</p>
<% end %>
<%= link_to "Back to list of tasks", tasks_path %>
